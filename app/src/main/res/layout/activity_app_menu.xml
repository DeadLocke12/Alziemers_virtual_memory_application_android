<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".AppMenu">

    <Button
        android:id="@+id/btnLogout2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/baseline_exit_to_app_white_18dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Application Menu"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btnCognitiveGames"
            android:layout_width="@dimen/answerBtn_width"
            android:layout_height="@dimen/answerBtn_height"
            android:background="@drawable/shape"
            android:text="Cognitive Games"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnChatbot"
            android:layout_width="@dimen/answerBtn_width"
            android:layout_height="@dimen/answerBtn_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:text="Chatbot"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnNotes"
            android:layout_width="@dimen/answerBtn_width"
            android:layout_height="@dimen/answerBtn_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:text="Notes"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="@dimen/answerBtn_width"
            android:layout_height="@dimen/answerBtn_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:text="Video Call"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>
</LinearLayout>